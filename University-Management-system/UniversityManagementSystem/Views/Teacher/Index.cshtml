@using GridMvc.Html
@model IEnumerable<UniversityManagementSystem.Models.Teacher>

@{
    ViewBag.Title = "Teacher Information";
}
<style type="text/css">
    h3, h4 {
        color: #233885;
        font-family: 'Agency FB';
    }

    .testMsg {
        width: 50%;
        margin-bottom: 10px;
        background-color: #F4F0F0;
    }
</style>
<hr/>
<h3>Teacher Information</h3>
<hr />
<h4>
    @Html.ActionLink("Add New Teacher", "Save")
</h4>

<p>
    @Html.Grid(Model).Columns(columns =>
      {
          columns.Add(t => t.Name)
          .Titled("Name");
          columns.Add(t => t.Address)
          .Titled("Address");
          columns.Add(t => t.Email)
         .Titled("Email");
          columns.Add(t => t.Contact)
              .Titled("Contact");
          

      }).WithPaging(5).Sortable();
</p>
