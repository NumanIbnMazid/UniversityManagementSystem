@using GridMvc.Html
@model IEnumerable<UniversityManagementSystem.Models.Student>

@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    h3, h4 {
        color: #233885;
        font-family: 'Agency FB';
    }

    .testMsg {
        width: 50%;
        margin-bottom: 10px;
        background-color: #F4F0F0;
    }
</style>
<h3>Student Information</h3>

<h4>
    @Html.ActionLink("Add New Student", "Save")
</h4>
<p>
    @Html.Grid(Model).Columns(columns =>
      {
          columns.Add(st => st.RegNo)
          .Titled("Registration No");
          columns.Add(st => st.Name)
          .Titled("Name");
          columns.Add(st => st.Email)
          .Titled("Email");
          columns.Add(st => st.Contact)
            .Titled("Mobile");

          columns.Add(st => st.Address)
           .Titled("Address");
         

      }).WithPaging(4).Sortable().WithMultipleFilters();
</p>
