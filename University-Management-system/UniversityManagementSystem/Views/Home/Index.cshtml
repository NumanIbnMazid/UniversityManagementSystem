@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/Style.css" rel="stylesheet" />
<link href="~/Content/css/style.css" rel="stylesheet"/>

<div id="site_content">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators" style="top:100%; left:80%;">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img style="height:500px; width: 100%;" src="~/images/home_1.jpg" />
            </div>

            <div class="item">
               <img style="height:500px; width: 100%;" src="~/images/home_2.jpg" />
            </div>
            
            <div class="item">
                <img style="height:500px; width: 100%;" src="~/images/image1.jpg" />
            </div>
        </div>

        <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="top:50%; width:20px;">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next" style="top:50%; width:20px;">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
      
    </div>
</div>

